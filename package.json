{
    "name": "pmdm",
    "author": "Salesforce.org Impact Engineering",
    "license": "UNLICENSED",
    "repository": "git@github.com:SalesforceFoundation/pmdm.git",
    "private": true,
    "devDependencies": {
        "@lwc/eslint-plugin-lwc": "^0.8.0",
        "@salesforce/eslint-config-lwc": "^0.4.0",
        "@salesforce/sfdx-lwc-jest": "^0.6.1",
        "babel-eslint": "^10.0.3",
        "eslint": "^6.6.0",
        "eslint-config-prettier": "^6.7.0",
        "eslint-plugin-prettier": "^3.1.1",
        "husky": "^3.1.0",
        "jest-junit": "^9.0.0",
        "lint-staged": "^9.4.3",
        "prettier": "^1.19.1",
        "prettier-plugin-apex": "^1.1.0"
    },
    "scripts": {
        "test:unit": "lwc-jest",
        "test:unit:watch": "lwc-jest --watch",
        "test:unit:debug": "lwc-jest --debug",
        "postinstall": "rm -rf venv && python3 -m venv venv && source venv/bin/activate && pip install -r requirements.txt"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged && source venv/bin/activate && python label_audit.py"
        }
    },
    "lint-staged": {
        "*": [
            "eslint",
            "prettier --check",
            "git add"
        ]
    }
}
